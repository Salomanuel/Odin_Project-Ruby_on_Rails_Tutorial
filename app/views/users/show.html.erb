<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<p><%= @user.email %></p>
			<p>it is <%= Time.now.strftime("%X") %></p>
			<p>created at: <%= @user.created_at %></p>
			<p>updated at: <%= @user.updated_at %></p>
		</section>
	</aside>
</div>

