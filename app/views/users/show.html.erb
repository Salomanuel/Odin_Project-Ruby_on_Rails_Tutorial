<head>
<style>
	table {	width:100%;	}
 	td,th { text-align: left;
 					padding: 6px; }
</style>
</head>

<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
</div>

<table>
	<thead>
		<tr>
			<th>name</th>
			<th>email</th>
			<th>created at</th>
			<th>updated at </th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td> <%= @user.name %> </td>
			<td> <%= @user.email %> </td>
			<td> <%= @user.created_at %> </td>
			<td> <%= @user.updated_at %> </td>
		</tr>
	</tbody>
</table>

<p>by the way, it's <%= Time.now %>

<p><%= link_to "<< back to user list", users_path %></p>